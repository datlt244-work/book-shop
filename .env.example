# =============================================================================
# Book Shop - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!
# =============================================================================

# =============================================================================
# Database - PostgreSQL
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=ecom_admin
POSTGRES_PASSWORD=your_secure_password_here

# =============================================================================
# Redis
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# =============================================================================
# MongoDB (Optional - for future services)
# =============================================================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_USER=admin
MONGO_PASSWORD=your_mongo_password_here

# =============================================================================
# Vault
# =============================================================================
VAULT_TOKEN=ecom-root-token
VAULT_URI=http://localhost:8200

# =============================================================================
# Config Server
# =============================================================================
CONFIG_SERVER_HOST=localhost
CONFIG_SERVER_PORT=8888
CONFIG_SERVER_USER=config
CONFIG_SERVER_PASSWORD=config123

# =============================================================================
# Consul
# =============================================================================
CONSUL_HOST=localhost
CONSUL_PORT=8500

# =============================================================================
# Email (SMTP) - Gmail Example
# =============================================================================
# To use Gmail SMTP:
# 1. Enable 2-Step Verification on your Google Account
# 2. Generate App Password: https://myaccount.google.com/apppasswords
# 3. Use the generated 16-character password below
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your_app_password_here

# =============================================================================
# MinIO (Object Storage)
# =============================================================================
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_USER=minioadmin
MINIO_PASSWORD=your_minio_password_here

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=Book Shop
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8088/api/v1

# =============================================================================
# Spring Profiles
# =============================================================================
SPRING_PROFILES_ACTIVE=dev
